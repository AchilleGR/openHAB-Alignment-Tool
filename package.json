{
	"name": "oh-formatter",
	"displayName": "openHAB Formatter",
	"description": "Tool to format and indent openHAB files. At the moment only item-files can be formatted.",
	"publisher": "maximilian-beckenbauer",
	"icon": "images/logo.png",
	"repository": {
		"url": "https://github.com/MaxBec/openHAB-Formatter",
		"type": "git"
	},
	"version": "1.0.3",
	"engines": {
		"vscode": "^1.38.0"
	},
	"categories": [
		"Other",
		"Formatters",
		"Linters"
	],
	"activationEvents": [
		"onCommand:extension.reformat-file"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.reformat-file",
				"title": "Reformat Item File",
				"category": "openHAB Formatter"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.38.0",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"typescript": "^3.3.1",
		"tslint": "^5.12.1",
		"vscode-test": "^1.2.0"
	}
}
