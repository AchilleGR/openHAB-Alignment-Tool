{
	"name": "oh-alignment-tool",
	"displayName": "openHAB Alignment Tool",
	"version": "1.0.6",
	"publisher": "maximilian-beckenbauer",
	"description": "Tool to format and indent openHAB files. At the moment only item-files can be formatted.",
	"author": {
		"name": "Maximilian Beckenbauer",
		"email": "max.bec92@gmail.com",
		"url": "https://github.com/MaxBec/openHAB-Alignment-Tool"
	},
	"categories": [
		"Other",
		"Formatters",
		"Linters"
	],
	"icon": "images/logo.png",
	"galleryBanner": {
		"color": "#dbdbdb",
		"theme": "dark"
	},
	"repository": {
		"url": "https://github.com/MaxBec/openHAB-Alignment-Tool",
		"type": "git"
	},
	"bugs": {
		"url": "https://github.com/MaxBec/openHAB-Alignment-Tool/issues",
		"email": "max.bec92@gmail.com"
	},
	"engines": {
		"vscode": "^1.38.0"
	},
	"license": "https://github.com/MaxBec/openHAB-Alignment-Tool/blob/master/LICENSE",
	"activationEvents": [
		"onCommand:extension.align-file"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.align-file",
				"title": "Reformat Item File",
				"category": "openHAB Alignment Tool"
			}
		],
		"keybindings": [
			{
				"command": "extension.align-file",
				"key": "ctrl+a+l",
				"mac": "cmd+a+l",
				"when": "editorTextFocus"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.38.0",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"typescript": "^3.3.1",
		"tslint": "^5.12.1",
		"vscode-test": "^1.2.0"
	}
}
